<table>
  <tr>
    <th><%= t 'tables.fields.name' %></th>
    <th><%= t 'tables.fields.token' %></th>
    <th><%= t 'tables.fields.email' %></th>
    <th><%= t 'tables.fields.date' %></th>
    <th><%= t 'tables.fields.value' %></th>
  </tr>
  <% rows.each do |row| %>
    <tr>
      <td><%= row['name'] + ' ' + row['surname'] %></td>
      <td><%= row['token'] %></td>
      <td><%= row['email'] %></td>
      <td><%= l row['admission_date'] %></td>
      <td><%= number_to_currency row['available_amount'] %></td>
    </tr>
  <% end %>
</table>